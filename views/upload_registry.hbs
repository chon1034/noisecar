<!DOCTYPE html>
<html lang="zh-Hant">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>上傳車籍資料</title>
  <!-- 引入 Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .container {
      position: relative; /* 設置容器為相對定位，方便定位內部元素 */
      max-width: 500px; /* 設定最大寬度 */
      background-color: #ffffff; /* 白色背景 */
      padding: 20px; /* 內邊距 */
      border-radius: 8px; /* 圓角效果 */
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* 添加陰影 */
    }

    .home-button {
      position: absolute; /* 絕對定位 */
      top: 10px; /* 距離容器頂部 */
      right: 10px; /* 距離容器右側 */
    }

    .form-group {
      margin-bottom: 15px; /* 表單元素的間距 */
    }

    .btn-custom {
      margin-top: 15px; /* 提交按鈕與其他元素的距離 */
    }
  </style>
</head>
<body class="bg-light d-flex justify-content-center align-items-center min-vh-100">
  <div class="container">
    <!-- 回首頁按鈕 -->
    <a href="/" class="btn btn-primary home-button">回首頁</a>

    <!-- 頁面標題 -->
    <h1 class="text-center mb-4">上傳車籍資料</h1>

    <!-- 查詢日期 -->
    <div class="form-group">
      <label for="queryDate" class="form-label">查詢日期</label>
      <input type="date" id="queryDate" name="queryDate" class="form-control" max="9999-12-31" required>
    </div>

    <!-- 上傳機車車籍 -->
    <form id="bikeForm" action="/upload-bike-registry" method="POST" enctype="multipart/form-data">
      <input type="hidden" id="bikeQueryDate" name="queryDate">
      <div class="form-group">
        <label class="form-label">機車車籍 🛵🛵🛵</label>
        <input type="file" id="bikeFile" name="bikeFile" class="form-control" accept=".csv" required>
      </div>
      <button type="submit" class="btn btn-primary btn-custom w-100">上傳機車車籍</button>
    </form>

    <hr>

    <!-- 上傳汽車車籍 -->
    <form id="carForm" action="/upload-car-registry" method="POST" enctype="multipart/form-data">
      <input type="hidden" id="carQueryDate" name="queryDate">
      <div class="form-group">
        <label class="form-label">汽車車籍 🚗🚗🚗</label>
        <input type="file" id="carFile" name="carFile" class="form-control" accept=".csv" required>
      </div>
      <button type="submit" class="btn btn-primary btn-custom w-100">上傳汽車車籍</button>
    </form>
  </div>

  <!-- 引入 Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // 同步查詢日期到隱藏欄位
    const queryDateInput = document.getElementById("queryDate");
    const bikeQueryDateInput = document.getElementById("bikeQueryDate");
    const carQueryDateInput = document.getElementById("carQueryDate");

    queryDateInput.addEventListener("input", () => {
      const queryDateValue = queryDateInput.value;
      bikeQueryDateInput.value = queryDateValue;
      carQueryDateInput.value = queryDateValue;
    });

    bikeQueryDateInput.value = queryDateInput.value;
    carQueryDateInput.value = queryDateInput.value;
  </script>
</body>
</html>
