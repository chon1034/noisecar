<!DOCTYPE html>
<html lang="zh-Hant">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>上傳車籍資料</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background-color: #f5f5f5;
    }
    .container {
      text-align: center;
      background-color: #fff;
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      width: 400px;
    }
    h1 {
      margin-bottom: 30px;
    }
    .form-group {
      margin-bottom: 20px;
    }
    label {
      display: block;
      font-weight: bold;
      margin-bottom: 5px;
    }
    input[type="file"],
    input[type="date"] {
      width: 100%;
      padding: 5px;
      font-size: 16px;
      margin-bottom: 10px;
    }
    button {
      display: block;
      width: 100%;
      padding: 10px;
      font-size: 16px;
      background-color: #6a5acd;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }
    button:hover {
      background-color: #483d8b;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>上傳車籍資料</h1>

    <!-- 查詢日期 -->
    <div class="form-group">
      <label for="queryDate">查詢日期</label>
      <input type="date" id="queryDate" name="queryDate" max="9999-12-31" required>
    </div>

    <!-- 上傳機車車籍 -->
    <form id="bikeForm" action="/upload-bike-registry" method="POST" enctype="multipart/form-data">
      <input type="hidden" id="bikeQueryDate" name="queryDate">
      <div class="form-group">
        <label for="bikeFile">上傳機車車籍</label>
        <input type="file" id="bikeFile" name="bikeFile" accept=".csv" required>
      </div>
      <button type="submit">上傳機車車籍</button>
    </form>

    <hr>

    <!-- 上傳汽車車籍 -->
    <form id="carForm" action="/upload-car-registry" method="POST" enctype="multipart/form-data">
      <input type="hidden" id="carQueryDate" name="queryDate">
      <div class="form-group">
        <label for="carFile">上傳汽車車籍</label>
        <input type="file" id="carFile" name="carFile" accept=".csv" required>
      </div>
      <button type="submit">上傳汽車車籍</button>
    </form>
  </div>

  <script>
    // 獲取查詢日期和兩個表單的隱藏欄位
    const queryDateInput = document.getElementById("queryDate");
    const bikeQueryDateInput = document.getElementById("bikeQueryDate");
    const carQueryDateInput = document.getElementById("carQueryDate");

    // 當查詢日期變更時，同步更新隱藏欄位的值
    queryDateInput.addEventListener("input", () => {
      const queryDateValue = queryDateInput.value;
      bikeQueryDateInput.value = queryDateValue;
      carQueryDateInput.value = queryDateValue;
    });

    // 初始化時設置隱藏欄位的值
    bikeQueryDateInput.value = queryDateInput.value;
    carQueryDateInput.value = queryDateInput.value;
  </script>
</body>
</html>